[
  {
    "create": "trip",
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": [
          "id",
          "driver_id",
          "from",
          "to",
          "price"
        ],
        "properties": {
          "id": {
            "bsonType": "string"
          },
          "driver_id": {
            "bsonType": "string"
          },
          "from": {
            "bsonType": "object",
            "required": [ "lat", "lng" ],
            "properties": {
              "lat": { "bsonType": "decimal" },
              "lng": { "bsonType": "decimal" }
            }
          },
          "to": {
            "bsonType": "object",
            "required": [ "lat", "lng" ],
            "properties": {
              "lat": { "bsonType": "decimal" },
              "lng": { "bsonType": "decimal" }
            }
          },
          "price": {
            "bsonType": "object",
            "required": [ "amount", "currency" ],
            "properties": {
              "amount": { "bsonType": "decimal" },
              "currency": { "bsonType": "string" }
            }
          },
          "status": {
            "bsonType": [ "string", "null" ]
          }
        }
      }
    },
    "validationLevel": "strict"
  },
  {
    "createIndexes": "trip",
    "indexes": [
      {
        "key": {
          "id": 1
        },
        "name": "id_unique",
        "unique": true
      }
    ]
  }
]