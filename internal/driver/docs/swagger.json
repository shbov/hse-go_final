    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/trips": {
            "get": {
                "description": "Получение списка поездок пользователя",
                "consumes": [
                    "application/json"
                ],
                "summary": "GetTrips",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of user",
                        "name": "user_id",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/trips/{trip_id}": {
            "get": {
                "description": "Получение поездки по ID",
                "consumes": [
                    "application/json"
                ],
                "summary": "GetTripByTripId",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of user",
                        "name": "user_id",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of trip",
                        "name": "trip_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/trips/{trip_id}/accept": {
            "post": {
                "description": "Принятие поездки водителем",
                "consumes": [
                    "application/json"
                ],
                "summary": "AcceptTrip",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of user",
                        "name": "user_id",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of trip",
                        "name": "trip_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/trips/{trip_id}/cancel": {
            "post": {
                "description": "Отмена поездки водителем",
                "consumes": [
                    "application/json"
                ],
                "summary": "CancelTrip",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of user",
                        "name": "user_id",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of trip",
                        "name": "trip_id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Reason of cancel",
                        "name": "reason",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/trips/{trip_id}/end": {
            "post": {
                "description": "Окончание поездки водителем",
                "consumes": [
                    "application/json"
                ],
                "summary": "EndTrip",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of user",
                        "name": "user_id",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of trip",
                        "name": "trip_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/trips/{trip_id}/start": {
            "post": {
                "description": "Начало поездки водителем",
                "consumes": [
                    "application/json"
                ],
                "summary": "StartTrip",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of user",
                        "name": "user_id",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of trip",
                        "name": "trip_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    }
}